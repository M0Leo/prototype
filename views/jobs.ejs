<%- include('partials/header') %>
<h1>Jobs</h1>

<% if (jobs.length === 0) { %>
<p>No jobs available at the moment.</p>
<% } else { %>
<ul>
  <% jobs.forEach(function(job) { %>
  <li>
    <h2><%= job.title %></h2>
    <p><%= job.location %></p>
    <p><%= job.description %></p>
  </li>
  <% }); %>
</ul>
<% } %>